<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cse.g5.Ashatit.ManageFuelWastage">

    <AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" />

    <Button layoutX="326.0" layoutY="25.0" text="Generate Report"
            fx:id="generateReportButton" onAction="#handleGenerateReport" />
    <Button layoutX="326.0" layoutY="70.0" text="Update Inventory"
            fx:id="updateInventoryButton" onAction="#handleUpdateInventory" />
    <Button layoutX="326.0" layoutY="116.0" text="Calculate Wasted Fuel"
            fx:id="calculateWastageButton" onAction="#handleCalculateWastage" />

    <TextField layoutX="326.0" layoutY="162.0" promptText="Spill Details"
               fx:id="spillDetailsField" />
    <TextField layoutX="326.0" layoutY="200.0" promptText="Incident Description"
               fx:id="incidentDescriptionField" />

    <Label layoutX="36.0" layoutY="40.0" text="Depty Maneger" fx:id="titleLabel" />

    <Button layoutX="36.0" layoutY="116.0" mnemonicParsing="false" text="Schedule fuel delivery"
            fx:id="scheduleFuelButton" onAction="#handleScheduleFuel" />
    <Button layoutX="36.0" layoutY="70.0" mnemonicParsing="false" text="Track fuel inventory"
            fx:id="trackInventoryButton" onAction="#handleTrackInventory" />
    <Button layoutX="36.0" layoutY="150.0" mnemonicParsing="false" text="Monitor fuel intake"
            fx:id="monitorIntakeButton" onAction="#handleMonitorIntake" />
    <Button layoutX="36.0" layoutY="188.0" mnemonicParsing="false" text="Approve emergency fuel requests"
            fx:id="approveEmergencyButton" onAction="#handleApproveEmergency" />
    <Button layoutX="36.0" layoutY="225.0" mnemonicParsing="false" text="Manage fuel wastage"
            fx:id="manageWastageButton" onAction="#handleManageWastage" />
    <Button layoutX="36.0" layoutY="262.0" mnemonicParsing="false" text="Monitor truck loading"
            fx:id="monitorLoadingButton" onAction="#handleMonitorLoading" />
    <Button layoutX="36.0" layoutY="301.0" mnemonicParsing="false" text="Manage restocking"
            fx:id="manageRestockingButton" onAction="#handleManageRestocking" />
    <Button layoutX="36.0" layoutY="339.0" mnemonicParsing="false" text="Generate monthly fuel distribution report"
            fx:id="generateMonthlyReportButton" onAction="#handleGenerateMonthlyReport" />

</AnchorPane>
