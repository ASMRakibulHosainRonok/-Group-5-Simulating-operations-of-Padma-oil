<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cse.g5.Ashatit.MonitorFuelIntake">

    <AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" />

    <Button layoutX="314.0" layoutY="62.0" text="Log Updates"
            fx:id="logUpdatesButton" onAction="#handleLogUpdates" />
    <Button layoutX="436.0" layoutY="120.0" text="Analyze Trends"
            fx:id="analyzeTrendsButton" onAction="#handleAnalyzeTrends" />
    <Button layoutX="425.0" layoutY="162.0" text="Fetch Usage Report"
            fx:id="fetchReportButton" onAction="#handleFetchUsageReport" />
    <Button layoutX="436.0" layoutY="200.0" text="Record Data"
            fx:id="recordDataButton" onAction="#handleRecordData" />
    <TextField layoutX="410.0" layoutY="40.0" prefHeight="69.0" prefWidth="149.0" promptText="Distribution Data"
               fx:id="distributionDataField" />
    <TextArea layoutX="385.0" layoutY="232.0" prefHeight="111.0" prefWidth="200.0"
              fx:id="fuelIntakeLogArea" />
    <Label layoutX="225.0" layoutY="22.0" text="Monitor Fuel Intake" textFill="#e11e1e"
           fx:id="titleLabel" />
    <Label layoutX="33.0" layoutY="32.0" prefHeight="17.0" prefWidth="104.0" />
    <Label layoutX="24.0" layoutY="32.0" prefHeight="17.0" prefWidth="104.0" text="Depot Manager"
           fx:id="depotManagerLabel" />

    <Button layoutX="24.0" layoutY="62.0" mnemonicParsing="false" text="Track fuel inventory"
            fx:id="trackFuelInventoryButton" onAction="#handleTrackFuelInventory" />
    <Button layoutX="24.0" layoutY="97.0" mnemonicParsing="false" text="Schedule fuel delivery"
            fx:id="scheduleFuelDeliveryButton" onAction="#handleScheduleFuelDelivery" />
    <Button layoutX="24.0" layoutY="133.0" mnemonicParsing="false" text="Monitor fuel intake"
            fx:id="monitorFuelIntakeButton" onAction="#handleMonitorFuelIntake" />
    <Button layoutX="24.0" layoutY="169.0" mnemonicParsing="false" text="Approve emergency fuel requests"
            fx:id="approveEmergencyRequestsButton" onAction="#handleApproveEmergencyRequests" />
    <Button layoutX="24.0" layoutY="200.0" mnemonicParsing="false" text="Manage fuel wastage"
            fx:id="manageFuelWastageButton" onAction="#handleManageFuelWastage" />
    <Button layoutX="24.0" layoutY="232.0" mnemonicParsing="false" text="Monitor truck loading"
            fx:id="monitorTruckLoadingButton" onAction="#handleMonitorTruckLoading" />
    <Button layoutX="24.0" layoutY="263.0" mnemonicParsing="false" text="Manage restocking"
            fx:id="manageRestockingButton" onAction="#handleManageRestocking" />
    <Button layoutX="24.0" layoutY="295.0" mnemonicParsing="false" text="Generate monthly fuel distribution report"
            fx:id="generateMonthlyReportButton" onAction="#handleGenerateMonthlyReport" />

</AnchorPane>
