<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cse.g5.Ashatit.ConductPreTripVehicleCheck">
    <AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
        <TextArea layoutX="365.0" layoutY="72.0" prefHeight="181.0" prefWidth="223.0" promptText="Enter Vehicle Check Results" fx:id="vehicleCheckResults" />
        <Label layoutX="274.0" layoutY="40.0" text="Trip Status: Safe to Proceed" fx:id="tripStatusLabel" />
        <Button layoutX="434.0" layoutY="36.0" text="Begin Inspection" fx:id="beginInspectionButton" onAction="#handleBeginInspection" />

        <Label layoutX="54.0" layoutY="40.0" text="Track Driver" fx:id="trackDriverLabel" />
        <Button layoutX="28.0" layoutY="72.0" mnemonicParsing="false" text="Check assigned deliveries" fx:id="checkDeliveriesButton" onAction="#handleCheckDeliveries" />
        <Button layoutX="28.0" layoutY="102.0" mnemonicParsing="false" text="Report delivery completion" fx:id="reportCompletionButton" onAction="#handleReportCompletion" />
        <Button layoutX="28.0" layoutY="138.0" mnemonicParsing="false" text="Real-time location tracking" fx:id="locationTrackingButton" onAction="#handleLocationTracking" />
        <Button layoutX="28.0" layoutY="175.0" mnemonicParsing="false" text="Request emergency fuel refil" fx:id="emergencyRefillButton" onAction="#handleEmergencyRefill" />
        <Button layoutX="28.0" layoutY="214.0" mnemonicParsing="false" text="Report road delays" fx:id="reportDelaysButton" onAction="#handleReportDelays" />
    </AnchorPane>

    <Button layoutX="464.0" layoutY="282.0" prefHeight="87.0" prefWidth="89.0" text="Submit Check" fx:id="submitCheckButton" onAction="#handleSubmitCheck" />
    <Label layoutX="438.0" layoutY="259.0" text="Vehicle Safety Check" fx:id="vehicleSafetyCheckLabel" />

    <Button layoutX="30.0" layoutY="247.0" mnemonicParsing="false" text="Conduct pre-trip vehicle check" fx:id="preTripCheckButton" onAction="#handlePreTripCheck" />
    <Button layoutX="30.0" layoutY="282.0" mnemonicParsing="false" text="Handle customer inquiries" fx:id="customerInquiriesButton" onAction="#handleCustomerInquiries" />
    <Button layoutX="30.0" layoutY="326.0" mnemonicParsing="false" text="Generate end-of-day trip report" fx:id="endOfDayReportButton" onAction="#handleEndOfDayReport" />
</AnchorPane>
